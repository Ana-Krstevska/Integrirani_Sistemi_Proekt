@model Tag

@{
    ViewData["Title"] = "Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for choosen Tag</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <label asp-for="Season" class="control-label"></label>
                    <input asp-for="Season" class="form-control" readonly />
                    <span asp-validation-for="Season" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClothingPiece" class="control-label"></label>
                    <input asp-for="ClothingPiece" class="form-control" readonly />
                    <span asp-validation-for="ClothingPiece" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fabric" class="control-label"></label>
                    <input asp-for="Fabric" class="form-control" readonly />
                    <span asp-validation-for="Fabric" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

