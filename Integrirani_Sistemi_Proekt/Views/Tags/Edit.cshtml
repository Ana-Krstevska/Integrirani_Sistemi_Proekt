@model Tag

@{ 
    ViewData["Title"] = "Edit";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Tag</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2"> 
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Season" class="control-label"></label>
                        <input asp-for="Season" class="form-control" />
                        <span asp-validation-for="Season" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClothingPiece" class="control-label"></label>
                        <input asp-for="ClothingPiece" class="form-control" />
                        <span asp-validation-for="ClothingPiece" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fabric" class="control-label"></label>
                        <input asp-for="Fabric" class="form-control" />
                        <span asp-validation-for="Fabric" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

